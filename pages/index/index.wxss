/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: rgba(111, 111, 211, 0.2);
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 512rpx;
  height: 512rpx;
  margin: 80rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  padding: 0;
  width: 128px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 128px;
  height: 128px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 36px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
  text-align: center;
}

.userinfo-button{
  color: black;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10%;
  font-family: '仿宋';
}